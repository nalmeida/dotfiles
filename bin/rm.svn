#!/bin/bash

if [ "$1" = "?" ]
	then
		B1="\033[1m";
		B2="\033[0m";
		echo -e "";
		echo -e "${B1}AUTHOR${B2}";
		echo -e "  Nicholas Almeida";
		echo -e "";
		echo -e "${B1}INFO${B2} (release 2011-01-28)";
		echo -e "  removes all \"._\" hidden folders using the current folder path as reference";
		echo -e "";
		echo -e "${B1}USAGE${B2}";
		echo -e "  rm.svn";
		echo -e "";
		exit 1;
fi

find . -name '.svn' | xargs rm -Rf