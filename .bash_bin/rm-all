#!/bin/bash

if [ "$1" = "?" ]
	then
		B1="\033[1m";
		B2="\033[0m";
		echo -e "";
		echo -e "${B1}AUTHOR${B2}";
		echo -e "  Nicholas Almeida";
		echo -e "";
		echo -e "${B1}INFO${B2} (release 2011-01-28)";
		echo -e "  removes all files and subfolder from a specific folder";
		echo -e "";
		echo -e "${B1}USAGE${B2}";
		echo -e "  rm-all FOLDER";
		echo -e "";
		echo -e "${B1}EXAMPLES${B2}";
		echo -e "  rm-all testFolder";
		echo -e "";
		exit 1;
fi

rm -rf $1