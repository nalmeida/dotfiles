#!/bin/bash

if [ "$1" = "?" ]
	then
		B1="\033[1m";
		B2="\033[0m";
		echo -e "";
		echo -e "${B1}AUTHOR${B2}";
		echo -e "  Nicholas Almeida";
		echo -e "";
		echo -e "${B1}INFO${B2} (release 2011-08-05)";
		echo -e "  changes the file extension from files on same folder";
		echo -e "";
		echo -e "${B1}USAGE${B2}";
		echo -e "  change-extension ORIGINAL-EXT NEW-EXT";
		echo -e "";
		echo -e "${B1}EXAMPLES${B2}";
		echo -e "  change-extension shtml html";
		echo -e "";
		exit 1;
fi

for i in *.$1; do mv $i `basename $i .$1`.$2;  done