#!/bin/bash

# source: https://github.com/hhhonzik/tinypng-bash

echo "Converting PNG files using TinyPNG.org";

for i in *.png
do
	JSON=`curl http://tinypng.org/api/shrink --request POST --data-binary @$i 2>/dev/null  `;

	URL=${JSON/*url\":\"/};
	URL=${URL/\"*/};

	curl $URL>${i} 2>/dev/null

	echo "${i} updated.";
done
